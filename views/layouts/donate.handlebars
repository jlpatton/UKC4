    <script>
        $(document).ready(function(){

            $('#dntGeneral').val("");
            $('#dntGeneral').value="";
            
            $('.colors input[type=radio]').on('change', function() {
                const amt1 = this.value;
                const amt2 = this.getAttribute('amt');
                $('#btnDonatePenny').text('Donate $' + amt1.toString());
                $('#dntInform').text('Place' + amt2 + ' on the Star of David Memorial Walls ($' + amt1 + ')');
                $('#dntInform').removeClass("toggleInform");
            });

        });

        $(document).ready(function(){

            $.each($('.donations input[type=radio]'), function (index, value) { 
                value.required=true;
            });

            $('.freq input[type=radio]').on('change', function() {
                
                const st = $(this).attr("id");

                const obj = $('.donations#'+st+' input[type=radio]');

                $('div.donations').hide();
                $.each($('.donations input[type=radio]'), function (index, value) { 
                   value.required=false;
                });
                $('div#'+st).show();
                $.each($('.donations#' +st+ ' input[type=radio]'), function (index, value) { 
                   value.required=true;
                });

                
                $('#dntGeneral').val("");
                $('#dntGeneral').value="";
                $('#quantity').value="";

            });

        });

        $(document).ready(function(){
            
            $('.donations input[type=radio]').on('change', function() {

                const amt1 = this.parentElement.innerText.substr(1, 6);
                const amt2 = this.value;
                $('#dntGeneral').val(amt1);
                $('#dntGeneral').value=amt2;
                $('#quantity').val(amt2);
                $('#quantity').value=amt2;

            });


            form.addEventListener('submit', function(event) {
                
            }, false);
        });

    </script>
  
